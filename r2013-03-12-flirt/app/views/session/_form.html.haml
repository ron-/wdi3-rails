.row
  .large-12.columns.spacer
.row
  .large-4.large-centered.columns
    = form_tag '/login', :remote => true do
      = label_tag :email
      = text_field_tag :email
      = label_tag :password
      = password_field_tag :password
      = button_to_function('Cancel', 'cancel_login_form()', :class => 'button small alert')
      = submit_tag 'Start Flirting', :class => 'button small success'