<ol>
  <li>
    <% @recipes.each do |recipe| %>
      <div id='bookbox'>
        <%= image_tag(recipe.image) %>
        <h1><%= link_to recipe.name, recipe %></h1>
        <p><%= recipe.name %></p>
        <p><%= recipe.course %></p>
        <p><%= recipe.cooktime %></p>
        <p><%= recipe.servingsize %></p>
        <p><%= recipe.instructions %></p>
      </div>
    <% end %>
  </li>
</ol>