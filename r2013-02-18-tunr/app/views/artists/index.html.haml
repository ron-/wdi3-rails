%table
  - @artists.each do |artist|
    %tr{:class => cycle('row0', 'row1')}
      %td= link_to(artist.name, artist_path(artist))
      %td= image_tag(artist.image)
      %td= link_to('Edit', edit_artist_path(artist), :class => 'button radius tiny') if is_admin

%p.newlink= link_to('New Artist', new_artist_path, :class => 'button radius tiny') if is_admin
