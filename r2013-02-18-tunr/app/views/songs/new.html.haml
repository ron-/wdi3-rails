.row
  .four.columns
    = render(:partial => 'shared/errors', :locals => {:object => @song})
    = form_for @song do |f|
      = f.label :name
      = f.text_field :name, :autofocus => true;
      = f.label :filename
      = f.text_field :filename
      = f.label :image
      = f.text_field :image
      = f.label :price
      = f.text_field :price

      - Genre.order(:name).each do |genre|
        = genre.name
        = check_box_tag 'song[genre_ids][]', genre.id, genre.in?(@song.genres.to_a)

      = f.submit nil, :class => 'button radius'
  .eight.columns


