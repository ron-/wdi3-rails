%table
  - @genres.each do |genre|
    %tr{:class => cycle('row0', 'row1')}
      %td= link_to(genre.name, genre_path(genre))
      %td= link_to('Edit', edit_genre_path(genre), :class => 'button radius tiny') if is_admin

%p.newlink= link_to('New Genre', new_genre_path, :class => 'button radius tiny') if is_admin