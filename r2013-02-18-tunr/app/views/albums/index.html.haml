%table
  - @albums.each do |album|
    %tr{:class => cycle('row0', 'row1')}
      %td= link_to(album.name, album_path(album))
      %td= image_tag(album.image)
      %td= link_to('Edit', edit_album_path(album), :class => 'button radius tiny') if is_admin

%p.newlink= link_to('New Album', new_album_path, :class => 'button radius tiny') if is_admin